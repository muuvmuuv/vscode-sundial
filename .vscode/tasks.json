// https://code.visualstudio.com/docs/editor/tasks#vscode
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch",
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "applyTo": "allDocuments",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*?Running esbuild",
          "endsPattern": "^.*?build finished"
        }
      },
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
