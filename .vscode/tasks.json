// https://code.visualstudio.com/docs/editor/tasks#vscode
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"type": "npm",
			"script": "dev",
			"isBackground": true,
			"problemMatcher": {
				"owner": "esbuild",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "^âœ˜ \\[ERROR\\] (.*)$",
					"message": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\[watch\\] build started$",
					"endsPattern": "^\\[watch\\] build finished$"
				}
			},
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "compile",
			"type": "npm",
			"script": "compile",
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated"
			},
			"group": "build"
		}
	]
}
