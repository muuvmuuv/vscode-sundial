{
  "name": "vscode-sundial",
  "displayName": "Sundial",
  "description": "Changes your theme on a specific time of the day.",
  "version": "0.1.0",
  "publisher": "muuvmuuv",
  "qna": false,
  "icon": "images/icon.jpg",
  "galleryBanner": {
    "Preview": "images/banner.jpg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/muuvmuuv/vscode-sundial"
  },
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": ["Other"],
  "keywords": [
    "sundial", "moment", "theme", "vscode"
  ],
  "activationEvents": ["*"],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Sundial Configurations",
      "properties": {
        "sundial.day_theme": {
          "type": "string",
          "default": null,
          "description": "Choose a theme to display on the day"
        },
        "sundial.day_range": {
          "type": "string",
          "default": "07:00 - 21:00",
          "description": "Set a range of time where you want to have day_theme enabled"
        },
        "sundial.night_theme": {
          "type": "string",
          "default": null,
          "description": "Choose a theme to display on the night"
        },
        "sundial.night_range": {
          "type": "string",
          "default": "21:00 - 07:00",
          "description": "Set a range of time where you want to have night_theme enabled"
        },
        "sundial.interval": {
          "type": "number",
          "default": 3600000,
          "description": "Interval Sundial is checking the time. Default is every hour. Time in miliseconds."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "moment": "^2.22.2"
  }
}
