{
  "name": "vscode-sundial",
  "displayName": "Sundial",
  "description": "Changes your theme on a specific time of the day.",
  "version": "0.2.1",
  "publisher": "muuvmuuv",
  "qna": false,
  "icon": "images/icon.jpg",
  "galleryBanner": {
    "Preview": "images/banner.jpg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/muuvmuuv/vscode-sundial"
  },
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": ["Other"],
  "keywords": [
    "sundial",
    "moment",
    "theme",
    "vscode",
    "dynamic",
    "day",
    "night"
  ],
  "activationEvents": ["*"],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Sundial Configurations",
      "properties": {
        "sundial.day_theme": {
          "type": "string",
          "default": null,
          "description": "Choose a theme to display on the day"
        },
        "sundial.day_start": {
          "type": "string",
          "default": "07:00",
          "description": "Set when your day starts (24 hour format)"
        },
        "sundial.night_theme": {
          "type": "string",
          "default": null,
          "description": "Choose a theme to display on the night"
        },
        "sundial.night_start": {
          "type": "string",
          "default": "19:00",
          "description": "Set when your night starts (24 hour format)"
        },
        "sundial.interval": {
          "type": "number",
          "default": 3600000,
          "description": "Interval Sundial is checking the time. Default is every hour. Time in miliseconds."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "peerDependencies": {
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.21",
    "tslint": "^5.8.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "moment": "^2.22.2"
  }
}
