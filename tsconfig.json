{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "tmp/out",
		"module": "CommonJS",
		"target": "ES2020",
		"lib": ["ES2020"],
		"sourceMap": true,
		"esModuleInterop": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"types": ["node"]
	},
	"exclude": ["node_modules", "tmp", "dist"]
}
